# AssetFlow Environment Variables Template
# Copy this file to .env and update the values

# Application Environment
NODE_ENV=production

# Port Configuration
BACKEND_PORT=5000
FRONTEND_PORT=3000

# API Configuration
REACT_APP_API_URL=http://your-server-ip:5000/api

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change-this-password

# JWT Configuration
JWT_SECRET=change-this-super-secret-key
JWT_EXPIRE=7d

# Application Settings
APP_NAME=AssetFlow
APP_VERSION=1.0.0
